<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d6e6a"
    android:orientation="vertical">
    <TextView
        android:id="@+id/adminPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Page"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <androidx.cardview.widget.CardView
        android:background="@drawable/edittext"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <EditText
            android:id="@+id/ArticleTitle1"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:hint="Title"
            android:inputType="text"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ArticleContent1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Content"
            android:layout_marginTop="50dp"
            android:inputType="textMultiLine" />
    </androidx.cardview.widget.CardView>




    <Button
        android:id="@+id/btnDelete1"
        android:layout_marginLeft="15dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Delete"
        />
    <Button
        android:id="@+id/btnPost1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Post"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-40dp"/>
    <androidx.cardview.widget.CardView
        android:background="@drawable/edittext"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <EditText
            android:id="@+id/ArticleTitle2"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:hint="Title"
            android:inputType="text"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ArticleContent2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Content"
            android:layout_marginTop="50dp"
            android:inputType="textMultiLine" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnDelete2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:text="Delete" />
    <Button
        android:id="@+id/btnPost2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Post"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-40dp"/>
    <androidx.cardview.widget.CardView
        android:background="@drawable/edittext"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <EditText
            android:id="@+id/ArticleTitle3"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:hint="Title"
            android:inputType="text"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ArticleContent3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Content"
            android:layout_marginTop="50dp"
            android:inputType="textMultiLine" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnDelete3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:text="Delete" />
    <Button
        android:id="@+id/btnPost3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Post"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-40dp"/>
    <androidx.cardview.widget.CardView
        android:background="@drawable/edittext"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        > <EditText
        android:id="@+id/ArticleTitle4"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:hint="Title"
        android:inputType="text"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

        <EditText
            android:id="@+id/ArticleContent4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Content"
            android:layout_marginTop="50dp"
            android:inputType="textMultiLine" /></androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnDelete4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:text="Delete" />
    <Button
        android:id="@+id/btnPost4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Post"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-40dp"/>
    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="40dp"
        android:text="LOGOUT"
        android:background="@drawable/button"
        />



</LinearLayout>